{
  "name": "toastr2",
  "main": "dist/toastr.umd.js",
  "module": "dist/toastr.es5.js",
  "typings": "dist/types/src/toastr.d.ts",
  "style": "dist/toastr.min.css",
  "version": "3.0.0-alpha.9",
  "description": "ToastrJS is a JavaScript library for Gnome / Growl type non-blocking notifications. jQuery is required. The goal is to create a simple core library that can be customized and extended.",
  "homepage": "http://www.toastrjs.com",
  "keywords": [
    "Toastr",
    "ToastrJS",
    "toastr.js"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "browser": true,
    "testRegex": "(\\.|/)(test|spec)\\.ts?$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(scss)$": "<rootDir>/styleMock.ts"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "rootDir": "__tests__",
    "modulePaths": [
      "<rootDir>"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "maintainers": [
    {
      "name": "Jan peer St√∂cklmair",
      "web": "https://jpeer.at",
      "twitter": "@jpeer264"
    }
  ],
  "authors": [
    {
      "name": "John Papa",
      "web": "http://www.johnpapa.net",
      "twitter": "@john_papa"
    },
    {
      "name": "Tim Ferrell",
      "web": "https://twitter.com/ferrell_tim",
      "twitter": "@ferrell_tim"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/JPeer264/toastr.git"
  },
  "bugs": "http://stackoverflow.com/questions/tagged/toastr",
  "licenses": [
    {
      "type": "MIT",
      "url": "http://www.opensource.org/licenses/mit-license.php"
    }
  ],
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/jquery": "^3.3.29",
    "@types/lodash": "^4.14.120",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-typescript": "^1.1.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "jquery": "^3.3.1",
    "lint-staged": "^8.1.0",
    "lodash.camelcase": "^4.3.0",
    "node-sass": "^4.11.0",
    "rollup": "^1.1.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.19.2",
    "ts-jest": "^23.10.5",
    "typedoc": "^0.14.2",
    "typescript": "^3.2.4",
    "typescript-eslint-parser": "^22.0.0"
  },
  "scripts": {
    "prepublish": "npm run build",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "lint": "eslint \"./src/**/*.ts\"",
    "fix": "npm run lint -- --fix",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest"
  }
}
